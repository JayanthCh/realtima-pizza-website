
<section>
  <div class="hero container">
    <div class="left">
      <h5><em>Are tou hungry?</em></h5>
      <h1>Do not Wait!!</h1>
      <button class="hero-btn"type="button" name="button">ORDER NOW</button>
    </div>

    <div class="right">
      <img src="/img/hero-pizza.png" alt="">
    </div>

  </div>
</section>

<section class="container">


 <div class="grid-container">

<% pizzass.forEach(function(pizza){ %>

  <div class="card" style="width: 19rem;">
    <img src="img/<%=pizza.image%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%=pizza.name%></h5>
      <p class="size"><%=pizza.size%></p>
      <div class="price">
        <p class="money">Rs. <%=pizza.price%></p>
        <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart">
          <span>+</span>
          <span>Add</span>
        </button>
      </div>

    </div>
  </div>

<% }) %>





 </div>
</section>
